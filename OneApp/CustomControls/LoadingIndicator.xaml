<?xml version="1.0" encoding="utf-8" ?>
<StackLayout xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneApp.CustomControls.LoadingIndicator"
             x:Name="this">
       <ActivityIndicator Color="{Binding Source={x:Reference this}, Path=Color}"
                          IsRunning="True"/>
       <Label Text="{Binding Source={x:Reference this}, Path=LoadingText}"
              HorizontalTextAlignment="Center"
              VerticalTextAlignment="Center"
              TextColor="{Binding Source={x:Reference this}, Path=Color}"/>
</StackLayout>