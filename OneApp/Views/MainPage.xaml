<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OneApp.Views.MainPage">

    <ScrollView
        Margin="20"
        VerticalOptions="Start">
        <VerticalStackLayout
            Spacing="25"
            
            VerticalOptions="Start">

            <HorizontalStackLayout
                Spacing="20">

                <Frame
                    CornerRadius="15"
                    HeightRequest="130"
                    WidthRequest="165">
                </Frame>

                <Frame
                    CornerRadius="15"
                    HeightRequest="130"
                    WidthRequest="165">
                </Frame>

            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
