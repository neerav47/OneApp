<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OneApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OneApp"
    xmlns:view="clr-namespace:OneApp.Views">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate view:MainPage}"
            Icon="home.png"/>

        <ShellContent
            Title="Products"
            ContentTemplate="{DataTemplate view:Products}"
            Icon="products.png"
            />

        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate view:Settings}"
            Icon="settings.png"/>

        <ShellContent 
            Title="Account"
            ContentTemplate="{DataTemplate view:Products}"
            Icon="profile.png"/>

    </TabBar>

</Shell>
